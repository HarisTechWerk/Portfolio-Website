@model PortfolioWebsite.Models.BlogPost

@{
    ViewData["Title"] = "Delete Blog Post";
}

<h1>Delete Blog Post</h1>

<h4>Are you sure you want to delete this blog post?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                Content
            </dt>
            <dd class="col-sm-10">
                @Model.Content
            </dd>
            <dt class="col-sm-2">
                Published
            </dt>
            <dd class="col-sm-10">
                @(Model.Published ? "Yes" : "No")
            </dd>
            <dt class="col-sm-2">
                Published At
            </dt>
            <dd class="col-sm-10">
                @Model.PublishedAt?.ToString("MMMM dd, yyyy")
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
