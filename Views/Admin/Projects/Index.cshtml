@model IEnumerable<PortfolioWebsite.Models.Project>

@{
    ViewData["Title"] = "Manage Projects";
}

<h1>Manage Projects</h1>

<a href="@Url.Action("Create", "Projects", new { area = "Admin" })" class="btn btn-primary mb-3">Add New Project</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Technologies</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Title</td>
                <td>@project.Technologies</td>
                <td>
                    <a href="@Url.Action("Edit", "Projects", new { id = project.Id, area = "Admin" })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Details", "Projects", new { id = project.Id, area = "Admin" })" class="btn btn-sm btn-info">Details</a>
                    <a href="@Url.Action("Delete", "Projects", new { id = project.Id, area = "Admin" })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
